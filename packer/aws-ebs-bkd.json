{
  "//": "Copyright 2021 Green River IT (GreenRiverIT.com) as described in LICENSE.txt distributed with this project on GitHub.",
  "//": "Start at https://github.com/AgileCloudInstitute?tab=repositories",
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `_region`}}",
      "vpc_id": "{{user `_vpc_id`}}",
      "subnet_id": "{{user `_subnet_id`}}",
      "security_group_id": "{{user `_security_group_id`}}",
      "source_ami_filter": {
         "filters": {
           "architecture": "{{user `image_architecture`}}",
           "name": "{{user `image_name`}}"
         },
         "owners": ["{{user `image_owner`}}"],
         "most_recent": true
      },
      "instance_type": "{{user `_instance_type`}}",
      "ssh_username": "{{user `_ssh_username`}}",
      "associate_public_ip_address": "{{user `_associate_public_ip_address`}}",
      "ssh_interface": "{{user `_ssh_interface`}}",
      "aws_polling" : {
           "delay_seconds": 60,
           "max_attempts": 50
      },
      "ami_name": "packer_AWS {{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "{{user `provisioner_script`}}"
    }
  ]
}
